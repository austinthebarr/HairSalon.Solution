@using HairSalon.Models;

@if (@Model["stylistSpecialties"].Count != 0)
{
  <h4>This Stylist has these Specialties:</h4>
  <ul>
    @foreach (Specialty specialty in @Model["stylistSpecialties"])
    {
      <li>@specialty.GetDescription()</li>
    }
  </ul>
}
<h4>Add a Specialty to this Stylist:</h4>
<form action='/items/@Model["selectedStylist"].GetId()/specialties/new' method='post'>
  <label for='specialty-id'>Select a category</label>
  <select id='specialty-id' name='specialty-id' type='text'>
    @foreach (var specialty in @Model["allSpecialties"])
    {
      <option value='@specialty.GetId()'>@specialty.GetDescription()</option>
    }
  </select>
  <button type='submit'>Add</button>
</form>
<p><a href="/">Return to Main Page</a></p>
