@using HairSalon.Models;
<h1>Bangs</h1>
<h2>Client: @Model["thisclient"].GetName()</h2>
<h3>Edit: @Model["thisclient"].GetName()</h3>
<form action='/client/@Model["clientid"]/info' method="post">
  <label for="name">Modify Name of Client</label>
  <input id="newName" name="newName" type="text">
  <select class="selectStylist" name="newStylist">
    @foreach (var stylist in Model["stylists"])
    {
      <option value="@stylist.GetId()">@stylist.GetName()</option>
    }
  </select>
  <button type="submit">Update Client Name</button>
</form>
<h4><a href="/client/Index">Return to Client List</a></h4>
